# TourCompanion SaaS Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Get these values from your Supabase project dashboard
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key-here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
VITE_APP_NAME=TourCompanion
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features (true/false)
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true
VITE_ENABLE_PWA=true

# =============================================================================
# API CONFIGURATION
# =============================================================================
# API timeout in milliseconds
VITE_API_TIMEOUT=30000
# Maximum file upload size in bytes (10MB = 10485760)
VITE_MAX_FILE_SIZE=10485760

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Development server configuration
VITE_DEV_SERVER_PORT=5173
VITE_DEV_SERVER_HOST=localhost

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================
# For production deployments, make sure to:
# 1. Set VITE_APP_ENVIRONMENT=production
# 2. Set VITE_ENABLE_DEBUG=false
# 3. Set VITE_ENABLE_ANALYTICS=true (if you want analytics)
# 4. Use your production Supabase URL and keys

# =============================================================================
# OPTIONAL: THIRD-PARTY INTEGRATIONS
# =============================================================================
# Uncomment and configure if you want to use these services

# Google Analytics (optional)
# VITE_GA_TRACKING_ID=GA-XXXXXXXXX

# Sentry Error Tracking (optional)
# VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Stripe Payments (optional)
# VITE_STRIPE_PUBLISHABLE_KEY=pk_test_...

# Email Service (optional)
# VITE_EMAIL_SERVICE_API_KEY=your-email-service-key

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 1. Never commit .env files to version control
# 2. Use different values for development, staging, and production
# 3. Rotate your Supabase keys regularly
# 4. Use environment-specific Supabase projects
# 5. Enable Row Level Security (RLS) in Supabase
# 6. Use strong, unique passwords for all services

