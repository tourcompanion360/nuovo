# TourCompanion SaaS Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Supabase configuration for backend operations
DATABASE_URL=postgresql://postgres:[password]@[host]:5432/[database]
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3001
NODE_ENV=development
HOST=localhost

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_PREFIX=/api/v1
CORS_ORIGIN=http://localhost:8080

# =============================================================================
# AUTHENTICATION
# =============================================================================
# JWT secret for token signing (must be at least 32 characters)
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
JWT_EXPIRES_IN=24h

# =============================================================================
# RATE LIMITING
# =============================================================================
# Rate limiting configuration (in milliseconds)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# FILE UPLOAD
# =============================================================================
# Maximum file size in bytes (10MB = 10485760)
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Stripe configuration (optional)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_ID_BASIC=price_basic_live
STRIPE_PRICE_ID_PRO=price_pro_live

# SendGrid configuration (optional)
SENDGRID_API_KEY=SG...

# =============================================================================
# MONITORING
# =============================================================================
# Sentry error tracking (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# Frontend URL for CORS and redirects
FRONTEND_URL=http://localhost:8080

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================
# For production deployments, make sure to:
# 1. Set NODE_ENV=production
# 2. Use production Supabase URL and keys
# 3. Set strong JWT_SECRET (at least 32 characters)
# 4. Configure proper CORS_ORIGIN
# 5. Set up monitoring and logging
# 6. Use HTTPS in production

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 1. Never commit .env files to version control
# 2. Use different values for development, staging, and production
# 3. Rotate your JWT secret regularly
# 4. Use environment-specific Supabase projects
# 5. Enable Row Level Security (RLS) in Supabase
# 6. Use strong, unique passwords for all services
# 7. Keep service role keys secure and never expose them to frontend

